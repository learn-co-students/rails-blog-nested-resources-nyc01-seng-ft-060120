<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>

<h3>Comments:</h3>
  <% @post.comments.each do |c| %>
    <%= c.content %>
  <% end %>
<h3>Add Comment: </h3>

  <%= form_for [@post, Comment.new] do |comment| %>
  <%= comment.label :content  %>
  <%= comment.text_area :content %>
  <%= comment.hidden_field :post_id, :value => @post.id %>
  <%= comment.hidden_field :user_id, :value => @post.user_id %>
  <%= comment.submit "Create Comment" %>
  <% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
